<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/background_white"
    android:paddingTop="1dp">

    <LinearLayout
        android:id="@+id/dd_22"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="3dp">

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Match_Image"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerInParent="true"
                app:civ_border_color="#11000000"
                app:civ_border_width="2dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:paddingEnd="8dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/on_off_matches"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/offline_user" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:id="@+id/Matches_name"
                        android:layout_width="wrap_content"
                        android:maxEms="7"
                        android:layout_height="wrap_content"
                        android:text="Matches's Name"
                        android:textColor="#EC407A"
                        android:textSize="16dp"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tagkm"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"

                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="18"
                        android:textAlignment="center"
                        android:textColor="@color/c3"
                        android:textSize="16dp"
                        />


                </LinearLayout>

                <TextView
                    android:id="@+id/time_text_likeYou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:text="วันนี้ 15.00"
                    android:textColor="@color/c4"
                    android:textSize="12dp" />


            </LinearLayout>


            <TextView
                android:id="@+id/status_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textColor="@color/text_black_gray"

                android:textSize="14dp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>