<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/gra"
    tools:context=".ChooseLoginRegistrationActivity">

    <LinearLayout
        android:id="@+id/linearLayout18"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/a88"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_width="150dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:clickable="false"

            android:src="@drawable/ic_candy" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dessert"
            android:textSize="40dp"

            android:letterSpacing="0.085"
            android:textColor="@color/text_black_gray"
            android:layout_marginTop="10dp"

            />
        <TextView

            android:id="@+id/clickToTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click to testLogin"

            android:textColor="@color/text_black_gray"
            android:textSize="18dp"

            android:layout_marginTop="20dp"
            />
        <LinearLayout
            android:id="@+id/testlogin"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            >
            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:translationZ="4dp"
                android:background="@drawable/myrect"
                android:text="เข้าสู่ระบบ"

                android:textColor="@color/text_black_gray" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:layout_marginLeft="20dp"
                android:translationZ="4dp"
                android:background="@drawable/myrect"
                android:text="สมัครสมาชิก"

                android:textColor="@color/text_black_gray" />
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            >
            <View
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#80000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login with"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"


                android:textColor="@color/text_black_gray"

                />
            <View
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#80000000"
                />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40dp"
            >
            <ImageView
                android:id="@+id/face"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:clickable="false"
                android:src="@drawable/ic_facebook" />
            <ImageView
                android:id="@+id/google"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:clickable="false"
                android:src="@drawable/ic_search"/>
            <ImageView
                android:id="@+id/button7"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:clickable="false"
                android:src="@drawable/ic_phone" />
        </LinearLayout>






    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language"
            android:textSize="18dp"
            android:textColor="@color/text_black_gray"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/thai_lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ไทย"
            android:textSize="16dp"
            android:textColor="@color/c4"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/text_black_gray"
            />
        <TextView
            android:id="@+id/eng_lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textSize="16dp"
            android:textColor="@color/c4"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>