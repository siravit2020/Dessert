<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:visibility="visible"
    android:id="@+id/view_item"
    >

    <LinearLayout
        android:id="@+id/dd_22"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/background_white"
        android:padding="3dp">

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical">
            <ProgressBar
                android:id="@+id/progress_image"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
               />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Match_Image"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerInParent="true"
                app:civ_border_color="#11000000"
                android:transitionName="ProfileTransition"
                app:civ_border_width="2dp" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/view_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:paddingEnd="8dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/on_off_matches"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/offline_user" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="8dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:id="@+id/Matches_name"
                        android:layout_width="wrap_content"
                        android:maxEms="8"
                        android:layout_height="wrap_content"
                        android:text="Matches's Name"
                        android:textColor="#EC407A"
                        android:textSize="16dp"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/tagkm"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"

                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="18"
                        android:textAlignment="center"
                        android:textColor="@color/c3"
                        android:textSize="16dp"
                         />


                </LinearLayout>

                <TextView
                    android:id="@+id/distance_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:text="11122"
                    android:textColor="@color/c4"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/chat_unread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_unread"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="0"
                    android:textAlignment="viewEnd"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Latest_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:hint="ข้อความล่าสุด"
                    android:textSize="15dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/Latest_time"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:hint="เวลา"
                    android:textAlignment="viewEnd"
                    android:textSize="15dp"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="id"
                android:textSize="10dp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/myself"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:ellipsize="end"
                android:maxLines="1"
                android:visibility="visible"
                android:textColor="@color/text_gray"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/status_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="#B39A9A9A"
                android:textSize="10dp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>